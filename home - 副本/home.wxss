}
.attestImg {
	overflow: hidden;
	background-color: #fff;
	margin-left: 40rpx;
	border-bottom: 1px solid #ececec;
	padding-bottom: 40rpx;
}
.attestRight {
	border-bottom: none !important;
}
.s1 {
	color: #febd2d;
}
.s2 {
	color: #ff585a;
}
.space {
	width: 100%;
	height: 120rpx;
}
.group {
	margin: 30rpx;
}
.group image {
	width: 100%;
	height: 218rpx;
}
.tastNotify {
	position: absolute;
	top: 50%;
	width: 100%;
	height: 50rpx;
	background: red;
	z-index: 99999999999999999999999999;
}

/* 公司信息 start */
.companyInfo {
	margin-top: 36rpx;
	background: linear-gradient(
		180deg,
		rgba(255, 105, 65, 1) 0%,
		rgba(255, 77, 62, 1) 100%
	);
	border-radius: 10rpx;
}

.companyInfo .heart {
	margin: 0 auto;
	padding-bottom: 33rpx;
	width: calc(100% - 60rpx);
	/* height: 214rpx; */
	overflow: hidden;
}
.nameOption {
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
	margin-top: 34rpx;
}
.companyName {
	font-size: 34rpx;
	font-weight: 600;
	color: #fff;
}
.nameOption .edit {
	width: 108rpx;
	height: 48rpx;
	border-radius: 34rpx;
	border: 1px solid rgba(255, 255, 255, 1);
	font-size: 30rpx;
	font-weight: 400;
	color: rgba(255, 255, 255, 1);
	line-height: 48rpx;
	text-align: center;
}
.nameOption .options {
	width: 168rpx;
	height: 60rpx;
	background: rgba(255, 247, 223, 1);
	border-radius: 34rpx;
	font-size: 30rpx;
	font-weight: 600;
	color: #ff3627;
	line-height: 60rpx;
	text-align: center;
}
.introAddress {
	display: flex;
	justify-content: flex-start;
	align-items: center;
	/* margin-top: 14rpx; */
}
.introAddress text {
	font-size: 24rpx;
	font-weight: 400;
	color: #fff;
}
.introAddress .intro {
	padding-right: 12rpx;
}
.introAddress .address {
	padding-left: 12rpx;
}
.introAddress .gap {
	width: 2rpx;
	height: 24rpx;
	background: #fff;
}
.attest {
	display: block;
	margin-top: 10rpx;
	width: 178rpx;
	height: 42rpx;
}
