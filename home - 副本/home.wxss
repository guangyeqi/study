@import "/styles/base.wxss";
@import "../index/index.wxss";
.homePage {
	width: 100%;
	overflow: hidden;
}
.homeHead {
	position: relative;
	background-color: #fff;
	box-sizing: border-box;
	padding: 40rpx;
	/* height: 460rpx; */
	padding-bottom: 0rpx;
	box-sizing: border-box;
	overflow: hidden;
}
.noCard {
	color: #333333;
	font-size: 36rpx;
	font-weight: bold;
}
.userImg {
	margin-right: 36rpx;
	/* flex: 0 100rpx 206rpx; */
}
.userImg image {
	display: block;
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
}
.userInfo {
	color: #333333;
	font-size: 24rpx;
	line-height: 2;
	display: flex;
	width: 458rpx;
}
.leftBox {
	flex: 1;
}
.rightBox {
	margin-left: 57rpx;
	width: 150rpx;
	display: flex;
	align-items: center;
}
.infoName {
	font-size: 40rpx;
	font-weight: bold;
	width: 320rpx;
}
.infoJob {
	color: #666666;
	font-size: 28rpx;
	line-height: 40rpx;
}
.infoCompany {
	/* color: #c0c0c0; */
	color: #666666;
	font-size: 28rpx;
	line-height: 33rpx;
	width: 550rpx;
}
.homeHead .leftText {
	position: relative;
	top: 40rpx;
	left: 32rpx;
	line-height: 1.6;
}
.name {
	font-size: 32rpx;
}
.leftText .job {
	display: block;
	color: #666666;
	font-size: 28rpx;
	max-width: 500rpx;
}
.leftText .job .center {
	margin: 0 10rpx;
}
.homeHead .avatar {
	position: absolute;
	top: 42rpx;
	right: 52rpx;
	width: 88rpx;
	height: 88rpx;
	border-radius: 50%;
}
.mt20 {
	margin-top: 20rpx;
}
.homeList {
	background-color: #fff;
}
.homeList .listItem {
	height: 110rpx;
}
.homeList .listItem .right {
	position: relative;
	line-height: 110rpx;
	border-bottom: 1px solid #ececec;
	flex: 1;
	color: #333333;
	font-size: 30rpx;
	margin-left: 40rpx;
}
.homeList .listItem .right .rightArrow {
	position: absolute;
	right: 50rpx;
	top: 50%;
	transform: translate(-50%, -50%);
}
.rightText {
	position: absolute;
	right: -20rpx;
	top: 51%;
	transform: translate(-50%, -50%);
	color: #333333 !important;
}
.home44 {
	margin-top: 20rpx;
}
.textOverFlow {
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.rightText {
	float: right;
	margin-right: 70rpx;
	color: #c8c8c8;
	font-size: 28rpx;
}

.today {
	background-color: #fff;
	text-align: center;
	border-radius: 6rpx;
	padding: 20rpx;

}
.today .browse,
.message {
	position: relative;
	flex: 1;
}
.today .message .redCircle {
	position: absolute;
	width: 16rpx;
	height: 16rpx;
	background-color: #f8645d;
	border-radius: 50%;
	right: 140rpx;
	top: 10rpx;
}
.today .text1 {
	display: block;
	font-size: 40rpx;
	color: #2b2b2b;
	font-weight: bold;
}
.today .text2 {
	display: block;
	color: #999999;
	font-size: 24rpx;
	margin-top: 14rpx;
}

.shareBtn {
	margin-top: 20rpx;
}
.shareBtn .btn {
	height: 162rpx;
	background: #fff;
	padding: 33rpx 40rpx 29rpx;
	text-align: left;
	position: relative;
}
.shareBtn .firstLine {
	color: #333333;
	font-size: 40rpx;
	font-weight: bold;
	line-height: 56rpx;
}
.shareBtn .firstLine .highlight {
	color: #ff595a;
}
.shareBtn .secondLine {
	color: #666666;
	font-size: 30rpx;
	line-height: 42rpx;
}
.shareBtn .secondLine .share {
	display: inline-block;
	font-style: 24rpx;
	background-color: #ff595a;
	color: #ffffff;
	padding: 2rpx 28rpx 2rpx 12rpx;
	margin-left: 16rpx;
	width: 134rpx;
	height: 36rpx;
	line-height: 36rpx;
}
.rightArrowTop {
	display: inline-block;
	position: relative;
	width: 14rpx;
	height: 24rpx;
}
.rightArrowTop::after {
	display: inline-block;
	content: "";
	height: 14rpx;
	width: 14rpx;
	border-width: 2rpx 2rpx 0 0;
	border-color: #c0c0c0;
	border-style: solid;
	transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
	position: absolute;
	top: 6rpx;
	right: -14rpx;
}
.rightArrowBottom {
	display: inline-block;
	position: relative;
	width: 14rpx;
	height: 24rpx;
}
.rightArrowBottom::after {
	display: inline-block;
	content: "";
	height: 14rpx;
	width: 14rpx;
	border-width: 2rpx 2rpx 0 0;
	border-color: #ffffff;
	border-style: solid;
	transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
	position: absolute;
	top: 4rpx;
	right: -8rpx;
}
.rightArrowBottom {
	display: inline-block;
	position: relative;
	width: 14rpx;
	height: 24rpx;
}
.rightArrowBottom::after {
	display: inline-block;
	content: "";
	height: 14rpx;
	width: 14rpx;
	border-width: 2rpx 2rpx 0 0;
	border-color: #ffffff;
	border-style: solid;
	transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
	position: absolute;
	top: 4rpx;
	right: -8rpx;
}
.image {
	position: absolute;
	bottom: 0rpx;
	right: 40rpx;
	width: 201rpx;
	height: 156rpx;
}

.userProve {
	color: #777777;
	font-size: 24rpx;
	float: left;
}
.cerPersonalStatus {
	color: #4c87ff !important;
}
.userProve image {
	width: 46rpx;
	height: 34rpx;
	vertical-align: bottom;
	margin-right: 13rpx;
}
.companyAttest {
	color: #777777;
	font-size: 24rpx;
	float: left;
	margin-left: 92rpx;
}
.cerCompanyStatus {
	color: #ff8146 !important;
}
.companyAttest image {
